@model MerchStore.WebUI.Models.Cart.CartViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Kassa</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Produkt</th>
            <th>Antal</th>
            <th>Pris</th>
            <th>Totalt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("c")</td>
                <td>@(item.Quantity * item.Price).ToString("c")</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end">
    <h4>Totalbelopp: @Model.TotalPrice.ToString("c")</h4>
</div>

<hr />

<div class="text-center">
    <p>Vill du <a asp-controller="Account" asp-action="Login">logga in</a> för att spara din order? Det är valfritt!</p>
</div>

<div class="text-center mt-3">
    <button class="btn btn-primary">Slutför Köp som Gäst</button>
</div>